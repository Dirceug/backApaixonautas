model Usuario {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  nome                String
  cpf                 String   @unique
  senha               String
  dataNascimento      DateTime
  email               String   @unique
  telefone            String?
  publicacoesCurtidas Int[]
}


